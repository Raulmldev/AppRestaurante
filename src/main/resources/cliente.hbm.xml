<?xml version="1.0" encoding="UTF-8"?>

<hibernate-mapping>

	<class name ="modelo.Cliente" table="cliente" catalog="proyecto_restaurante">
		
		<id name = "idCliente" type="java.lang.String">
			<column name="CLIENTE_ID"/>
				
		</id>
		
		<property name="nombreCliente" column="NOMBRE_CLIENTE" type="java.lang.String"></property>
		
		<property name="clienteDNI" column="CLIENTE_DNI" type="java.lang.String"></property>
	    	
	    <property name="direccionCliente" column="DIRECCION_CLIENTE" type="java.lang.String"/>
		
		<property name="telefonoCliente" column="TELEFONO_CLIENTE" type="java.lang.String"></property>
		
		<property name="emailCliente" column="EMAIL_CLIENTE" type="java.lang.String"></property>
			    
	    <property name="puntosCliente" column="PUNTOS_CLIENTE" type="int"></property>
				
	</class>

</hibernate-mapping>